<div class='card'>
    <div class='card-header'>
        <h2>Login to Profile</h2>
    </div>
    <form id='login-form' class='card-body'>
        <div>
            <label for='username-login'>Username:</label>
            <input type='text' id='username-login'/>
        </div>
        <div>
            <label for='password-login' class='form-label'>Password:</label>
            <input type='password' id='password-login'/>
        </div>
        <button type='submit' id='login-button' class='button'>Click to Login</button>
        <a type='button' href='/public/js/signup.js'>Sign Up</a>
    </form>
</div>

<script src='/public/js/login.js'></script>