<div class='post card'>
    <div class='card-header'>
        <h2>Edit A Post</h2>
    </div>
    <form id='edit-form' class='card-body'>
        <input type='hidden' name='post-id' value='{{post.id}}'/>
        
        <label class='form-label' for='post-title'>Post Title</label>
        <input type='text' name='post-title' value='{{post.title}}' class='form-input'/>

        <label class='form-label' for='post-body'>Post Content</label>
        <textarea name='post-body' class='form-input'>{{post.body}}</textarea>

        <button type='submit' class='button'>Post Update</button>

        <button type='button' id='delete-button' class='button'>Delete Post</button>
    </form>
</div>

<script src='/public/js/editing.js'></script>